
@{
    ViewBag.Title = "Login";
}

<div style="height: 400px" class="w3-animate-bottom">
    <div class="w3-round-large w3-half w3-card w3-display-middle">
        <div class="w3-container w3-card w3-green w3-round-large">
            <h3 class="w3-padding-large">Đăng nhập</h3>
        </div>
        <form class="w3-container w3-card-4 w3-round-large" action="/Account/CheckLogin" method="post">
            <br>
            <p>
                <label class="w3-text-grey">Username</label>
                <input class="w3-input w3-border w3-round-large" type="text" name="userName" id="userName" required>
            </p>
            <p>
                <label class="w3-text-grey">Password</label>
                <input class="w3-input w3-border w3-round-large" type="password" name="password" id="password" required>
            </p>
            <br>
            <p>
                <button type="submit" class="w3-btn w3-border w3-hover-yellow w3-padding w3-green w3-round-large" style="width:120px">Login</button>
                <a href="@Url.Action("Index", "Home")">
                    <input type="button" class="w3-btn w3-border w3-light-grey w3-round-large" style="width:120px" value="Cancel">
                </a>
            </p>
        </form>
    </div>
</div>
