@using System.Activities.Expressions
@model IEnumerable<Ttcn_web.Models.ICProduct>

@{
    ViewBag.Title = "Filter";
}

<h2>Filter</h2>

<table class="table">
    <tr>
        <th>
            STT
        </th>

        <th>
            @Html.DisplayNameFor(model => model.ICProductName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ICProductNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ICProductDesc)
        </th>
        <th></th>
    </tr>
    @{
        int count = 0;

        foreach (var item in Model)
        {
            count++;
            <tr>
                <td>
                    @count
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.ICProductName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ICProductNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ICProductDesc)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", "Product", new { id = item.ICProductID }, new { }) |
                    @Html.ActionLink("Details", "Details", "Product", new { id = item.ICProductID }, new { }) |
                    @Html.ActionLink("Delete", "Delete", "Product", new { id = item.ICProductID }, new { })
                </td>
            </tr>
        }
    }

</table>
