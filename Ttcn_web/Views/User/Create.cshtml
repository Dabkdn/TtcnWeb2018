@model Ttcn_web.Models.ADUser

@{
    ViewBag.Title = "Create";
}

<div class="w3-content w3-animate-bottom">

    <div class="w3-margin w3-card">
        <div class="w3-container w3-card w3-blue w3-round-large">
            <h3 class="w3-padding-large">Tạo mới tài khoản</h3>
        </div>

        <form action="/User/Create" method="post" class="w3-container w3-card-4 w3-light-grey w3-text-light-blue w3-round-large">

            <div class="w3-row w3-section">
                <div class="w3-col" style="width:50px"><i class="w3-xxlarge fa fa-user-plus"></i></div>
                <div class="w3-rest">
                    <input class="w3-input w3-border" name="username" type="text" placeholder="Tên đăng nhập" required>
                </div>
            </div>

            <div class="w3-row w3-section">
                <div class="w3-col" style="width:50px"><i class="w3-xxlarge fa fa-user-secret"></i></div>
                <div class="w3-rest">
                    <input class="w3-input w3-border" name="password" type="password" placeholder="Mật khẩu" required>
                </div>
            </div>

            <div class="w3-row w3-section">
                <div class="w3-col" style="width:50px"><i class="w3-xxlarge fa fa-user-secret"></i></div>
                <div class="w3-rest">
                    <input class="w3-input w3-border" name="re_password" type="password" placeholder="Nhập lại mật khẩu" required>
                </div>
            </div>

            <p>
                <button type="submit" class="w3-btn w3-border w3-hover-yellow w3-padding w3-blue w3-round-large" style="width:120px">Tạo mới</button>
                <a href="@Url.Action("Index", "User")">
                    <input type="button" class="w3-btn w3-border w3-light-grey w3-round-large" style="width:120px" value="Hủy">
                </a>
            </p>

        </form>
    </div>

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
