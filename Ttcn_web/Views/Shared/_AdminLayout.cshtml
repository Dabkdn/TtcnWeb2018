<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Admin - @ViewBag.Title</title>
	@Scripts.Render("~/bundles/jquery")
	<script src="~/Scripts/ckfinder/ckfinder.js"></script>
	<link href="~/Content/w3school.css" rel="stylesheet">
	<link href="~/Content/PagedList.css" rel="stylesheet" />
	<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Lobster">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

</head>
<body>

    <div class="w3-sidebar w3-bar-block w3-blue w3-card w3-animate-left" style="width:150px; display:none" id="mySidebar">
        <button class="w3-bar-item w3-button w3-large"
                onclick="w3_close()">
            &#10094;
        </button>
        <div class="w3-center">
            <a href="@Url.Action("Index","Home")" class="w3-button w3-light-blue w3-round-xxlarge w3-padding-12 w3-margin">View</a>
        </div>
        <div class="w3-light-blue">
            <h5 class="w3-bar-item w3-center">Menu</h5>
        </div>

        <div class="">
            <a href="@Url.Action("Index","Admin")" class="w3-button w3-bar-item">
                <i class="fa fa-home"></i>
                <span>Trang chủ</span>
            </a>
        </div>

        <div class="">
            <a href="@Url.Action("Index","User")" class="w3-button w3-bar-item">
                <i class="fa fa-user"></i>
                <span>User</span>
            </a>
        </div>

        <div class="">
            <a href="@Url.Action("Index","FurnitureType")" class="w3-button w3-bar-item">
                <i class="fa fa-envira"></i>
                <span>Loại nội thất</span>
            </a>
        </div>

        <div class="">
            <a href="@Url.Action("Index","Product")" class="w3-button w3-bar-item">
                <i class="fa fa-envira"></i>
                <span>Sản phẩm</span>
            </a>
        </div>

        <div class="">
            <a href="@Url.Action("Revenue","Admin")" class="w3-button w3-bar-item">
                <i class="fa fa-envira"></i>
                <span>Thống kê</span>
            </a>
        </div>

    </div>

    <div id="main" class="w3-animate-right">

        <div class="w3-row">
            <div class="w3-col m1">
                <button id="openNav" class="w3-button w3-xlarge" onclick="w3_open()">&#10095;</button>
            </div>
            <div class="w3-col m11">
                <h1 class="w3-lobster w3-center">Noithatviet</h1>
            </div>
        </div>

        <div class="container body-content">
            @RenderBody()
        </div>
        
        <footer class="w3-container w3-padding-32 w3-blue w3-margin-top">
            <div class="w3-row-padding">
                <div class="w3-half">
                    <p>Đồng sáng lập:</p>
                    <div class="w3-half">
                        <p><i class="fa fa-user w3-hover-opacity"> Nguyễn Khánh Hà</i></p>
                        <p><i class="fa fa-user w3-hover-opacity"> Võ Như Hoàn</i></p>
                        <p><i class="fa fa-user w3-hover-opacity"> Nguyễn Đình Bình</i></p>
                    </div>
                    <div class="w3-half">
                        <p><i class="w3-hover-opacity"> nguyenkhanhha@gmail.com</i></p>
                        <p><i class="w3-hover-opacity"> vonhuhoan@gmail.com</i></p>
                        <p><i class="w3-hover-opacity"> nguyendinhbinh@gmail.com</i></p>
                    </div>
                </div>

                <div class="w3-half">
                    <br />
                    <div class="w3-right">
                        <a href="#" class="w3-button w3-light-grey"><i class="fa fa-arrow-up"></i></a>
                        <div class="w3-xlarge w3-section">
                            <i class="fa fa-facebook-official w3-hover-opacity"></i>
                            <i class="fa fa-instagram w3-hover-opacity"></i>
                        </div>

                    </div>
                </div>

            </div>
            <div class="w3-center">
                <i class="fa fa-copyright">2019</i>
            </div>
        </footer>
    </div>

    

    <script>
        function w3_open() {
            document.getElementById("main").style.marginLeft = "10%";
            document.getElementById("mySidebar").style.width = "10%";
            document.getElementById("mySidebar").style.display = "block";
            document.getElementById("openNav").style.display = 'none';
        }
        function w3_close() {
            document.getElementById("main").style.marginLeft = "0%";
            document.getElementById("mySidebar").style.display = "none";
            document.getElementById("openNav").style.display = "inline-block";
        }
    </script>

    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
